<phpunit
    bootstrap="bootstrap.php"
    backupGlobals="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    cacheResult="false"
    >
    <testsuites>
        <testsuite name="main">
            <directory prefix="test-" suffix=".php">.</directory>
        </testsuite>
    </testsuites>
</phpunit>
